@model ListModel
@{
}
<h1>Restaurants</h1>
<!---Model.message-->
<br>
<!---Model.messageGlobal-->

<br>
<br><br>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="searchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-primary">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>

    </div>
</form>
<table class="table">
    <thead style="font-weight:bolder">
    <td>Name</td>
    <td>Location</td>
    <td>Cuisine</td>
    </thead>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>  @restaurant.Name</td>
            <td>  @restaurant.Location</td>
            <td>  @restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <li class="glyphicon glyphicon-zoom-in"></li>
                </a>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <li class="glyphicon glyphicon-edit"></li>
                </a>
            </td>
        </tr>
    }

</table>


<a asp-page="./Edit" class="btn btn-primary">Add New</a>
